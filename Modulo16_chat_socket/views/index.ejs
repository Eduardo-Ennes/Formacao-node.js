<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=h1, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        #chat{
            max-height: 370px;
            min-height: 370px;
            background-color: aliceblue;
            overflow-y: scroll;
        }
    </style>
</head>
<body>
  <h1>Chat do fefe do mercadinho</h1>
  <div id="chat">

  </div>
  <input type="text" name="" id="msg" class="form-control"><br>
  <input type="text" name="" id="username" placeholder="Digitar o seu nome de usuÃ¡rio" class="form-control">
  <button onclick="enviar()" class="btn btn-primary btn-lg btn-block">Enviar</button>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.5/socket.io.js"></script>
<script>
    var socket = io("http://localhost:8080")
    socket.on('disconnect', () => {
        console.log('Desconectado')
    })

    socket.on('showmsg', (data) => {
        console.log(data)
        var chat = document.getElementById('chat')
        var p = document.createElement("p")
        p.innerHTML = `${data.username}: ${data.msg} `
        chat.append(p)
    })

    function enviar(){
        var msg = document.getElementById('msg').value
        var username = document.getElementById('username').value
        
        socket.emit('msg', {msg: msg, username: username})
    }

</script>
</html>